{
  "snapshot": "POPULATED_FROM_SETTINGS",
  "install": "npm ci --legacy-peer-deps",
  "start": "echo 'CortexReel development environment ready' && node --version && npm --version",
  "terminals": [
    {
      "name": "Dev Server",
      "command": "npm run dev"
    },
    {
      "name": "Type Check",
      "command": "npm run type-check -- --watch"
    },
    {
      "name": "Linter",
      "command": "npm run lint -- --watch"
    },
    {
      "name": "Test Runner",
      "command": "npm run test -- --watch"
    },
    {
      "name": "Build Monitor",
      "command": "npm run build -- --watch"
    }
  ]
}